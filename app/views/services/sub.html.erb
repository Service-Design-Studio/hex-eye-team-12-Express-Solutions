<center>
  <div class="container">
    <% if session[:branch] != nil %>
    <h6 class="subtitle has-text-left"><%=Branch.find_by(branch: session[:branch]).branch_name%></h6>
    <% end %>
    <h3 class="title is-1 has-text-left"><%=@category%></h3>
  </div>
  <br>

  <div class="columns is-mobile is-multiline">
    <% @services.each do |service| %>
    
    <% @the_link = time_estimate_url(service) %>
    <% @the_services = service.service %>

      <div class="column is-half"> 

        <div class="card-image">    
          <figure class="image is-3by1">
            <%= image_tag 'GreyBackground.png' %>
          </figure>

          <a href=<%= @the_link %>>
            <div class="is-overlay centertext">
                <center><p><%= @the_services %></p></center>   
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>

</center>
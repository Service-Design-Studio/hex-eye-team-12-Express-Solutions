<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


<%= javascript_include_tag "autocomplete.js" %>


<div class="column is-full dbsbackground">

  <div class="column is-full" style='margin-top:7vh;'>
  </div>

  <div class="columns is-mobile is-multiline is-vcentered is-centered has-text-center">

    <div class="column is-half-tablet is-four-fifths-mobile">

      <div class="container alignitemscenter">
        <h3 class="title is-3" style="text-align: middle; color:white;">What would you like to do today?</h3>
      </div>

      <div class="column is-full" style='margin-top:4vh;'>
      </div>

      <% if session[:branch] != nil %>
        <h4 class="subtitle is-4 alignitemscenter" style="color:white;"><%=Branch.find_by(branch: session[:branch]).branch_name%></h4>
      <% end %>
      <% if session[:branch] == nil %>
        <div class="column is-full" style='margin-top:4.5vh;'>
        </div>
      <% end %>
    </div>
    
    <div class="column is-full">
      <div class="dropdown-container search" id="search">    
        <input title="press enter for more" class="input is-rounded" type="text" placeholder="🔍 Search for a service" id="myInput"/>


        <div class="dropdown display " id="results" style="display: block; position: relative;">
          <center><span id='popout' style="visibility: hidden;"><a>Press Enter to Go</a></span></center>
        </div>
          
      </div>
    </div>

  </div>

  <div class="column is-full topservice-gap">
  </div>

  <div class="container alignitemscenter">
    <h3 class="title" style="text-align: middle; color:white; font-size:28px;">Is this what you are looking for?</h3>
  </div>

  <div class="column is-full" style='margin-top:5px;'>
  </div>

  <div class="column is-full gradienttopservices">
    <div class="columns is-centered">
      <div class="column is-11-mobile is-10-tablet is-7-desktop">
        <div class="columns is-multiline is-centered is-vcentered has-text-center">

          <% @topServices.each do |service| %>

          <% the_link = time_estimate_url(service) %>
          <% the_services = service.service %>
          <% img_link = service.service_image_link.to_s %>
          

          <a href=<%= the_link %>> 
            <div class="column squarebuttons-topservice" id= <%= the_services %>> 
              <div class="topservicebutton" style='margin-top:-55px;'>
                <br>
                <center><figure class="image capsize is-rounded">
                  <%= image_tag img_link %>
                </figure></center>
                
                <hr style="height: 0px; visibility: hidden; margin-bottom:-5px;">

                <center><p class="small blurry-text" style="font-size: 13px; line-height:17px; text-align: middle; margin-top:-10px; margin-right:3px; margin-left:3px;"><%= the_services %></p></center>
              </div>
          </a>
            </div>

          <% end %>
        </div>
        <hr style="height: 0px; visibility: hidden; margin-bottom:-10px;">
      </div>
    </div>
  
  </div>
  
</div>

<div class="column is-full" style='margin-top:-20px;'>
</div>
  
<div class="column is-full">

  <div class="container">
    <h3 class="title is-4 alignitemscenter" style="color:rgb(39, 39, 39);">Categories</h3>
    <hr style="height: 0px; visibility: hidden; margin-bottom:-15px;">
  </div>
  
  <div class="columns is-centered">
    <div class="column is-11-mobile is-10-tablet is-7-desktop">
      <div class="columns is-mobile is-multiline">

        <% @allServices.each do |service| %>

        <% the_link2 = sub_services_url(service.category) %>
        <% the_services2 = service.category %>
        <% cat_link = service.cat_image_link.to_s %>
        

        <div class="column is-6-mobile is-3-tablet is-3-desktop categoriesbutton"> 
          <a href=<%= the_link2 %>>
            <div class="card">
              
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= image_tag cat_link %>
                </figure>     
              </div>

              <hr style="height: 0px; visibility: hidden; margin-bottom:-15px;">

              <div class="content textarea-categories">
                  <center><p class="alignitemscenter blurry-text" style="font-size: 13px;"><%= the_services2 %></p></center>   
              </div>
            </div>
          </a>
        </div>
        <% end %>

        <div class="column is-6-mobile is-3-tablet is-3-desktop categoriesbutton"> 
          <a href='/more'>
            <div class="card" id='More'>

              <div class="card-image">
                <figure class="image is-4by3">
                  <%= image_tag 'categories/More.jpg' %>
                </figure>
              </div>

              <hr style="height: 0px; visibility: hidden; margin-bottom:-15px;">
            
              <div class="content textarea-categories">
                  <center><p class="alignitemscenter blurry-text" style="font-size: 13px;">Visit a branch</p></center>   
              </div>
            </div>
          <a>
        </div>

      </div>
    </div>
  </div>

</div>

<div class="column is-full">
</div>

<div class="column is-full">
</div>
<div class="column is-full">
</div>

<script> 
  var services_sb = <%= @services_sb.inspect.html_safe %>; 
</script> 
<h2 class="subtitle">What are you looking for?</h2>

<input class="input is-rounded" type="text" placeholder="🔍 Search for a service">

<div class="container">
<br>
<h3 class="title is-1 has-text-left">Top Services</h3>
</div>

<br>

<div class="columns is-mobile is-multiline is-half">

<% @topServices.each do |service| %>
  <div class="column is-half"> 
    <button class="button is-large is-responsive is-fullwidth" id= <%= service.service%> >
      <span class="icon">
        <i class="fab fa-github"></i>
        <p style="font-size:15px; color:black;"><%= link_to service.service, time_estimate_url(id: service.id, migratable: service.migratable) %></p>
      </span>

    </button>
  </div>

<% end %>

</div>




<div class="container">
  <h3 class="title is-1 has-text-left">Main Categories</h3>
</div>
<br>


<div class="columns is-mobile is-multiline is-8 has-background-white is-centered">

<!%= @allServices.inspect %>

<% @allServices.each do |service| %>
  <div class="column is-half is-multiline"> 
  <button class="button is-large is-fullwidth">
    <a><%= service[0] %></a>
      <span class="icon">
        <i class="fab fa-github"></i>
        <p style="font-size:15px; color:black;"><%= link_to service.category %></p>
      </span>
    </button>
  </div>
<% end %>

</div>
<br>

<button class="button"><a href="http://www.google.com.sg">More</a></button>
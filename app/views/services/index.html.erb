
<div class="columns">
<%= form_tag services_path, method: :get do %>
  <%= label_tag "Search for a service:   " %>
  <%= text_field_tag "search", params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
</div>

<h3 class="title is-1">Top Services</h3>

<div class="columns is-mobile is-multiline is-8 has-background-white is-centered">
<% @services.each do |service| %>
  <div class="column is-half"> 
    <button class="button is-large is-responsive is-fullwidth">
      <span class="icon">
        <i class="fab fa-github"></i>
        <%= link_to service.name, sub_service_url(service.id) %>
      </span>

    </button>
  </div>
<% end %>


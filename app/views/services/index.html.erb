
<div class="columns">
<%= form_tag services_path, method: :get do %>
  <%= label_tag "Search for a service:   " %>
  <%= text_field_tag "search", params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
</div>

<h3 class="title is-1">Top Services</h3>

<div class="columns is-mobile is-multiline is-8 has-background-white is-centered">
<% @topServices.each do |service| %>
  <div class="column is-half"> 
    <button class="button is-large is-responsive is-fullwidth" id= <%= service.id%> >
      <span class="icon">
        <i class="fab fa-github"></i>
        
      </span>
      <%= link_to service.service, time_estimate_url(id: service.id, migratable: service.migratable) %>

    </button>
  </div>
<% end %>
</div>

<h3 class="title is-1">Main Categories</h3>

<div class="columns is-mobile is-multiline is-8 has-background-white is-centered">
<!%= @allServices.inspect %>
<% @allServices.each do |service| %>
  <div class="column is-half"> 
  
    <button class="button is-large is-responsive is-fullwidth" id= <%= service.category%>>
    <a><%= service[0] %></a>
      <span class="icon">
        <i class="fab fa-github"></i>
        <%= link_to service.category, sub_service_url(service.category) %>
      </span>

    </button>
  </div>
<% end %>
</div>






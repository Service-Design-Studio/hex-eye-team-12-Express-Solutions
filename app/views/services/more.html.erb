<center>

  <div class="column is-full">
    <h1 class='title' style = "font-size:45px">More</h1>
    <hr style="height: 2px; color:black; background-color:gray">
  </div>

 



    <div class="select is-rounded">
      <%= form_with url: more_QR_path, method: :get, id: 'branch_form' do |form| %>

        <h1 class='title' style = "font-size:30px">Choose a topic</h1>
          <%= form.select :topic, @topic %>
        <br>

        <h1 class='title' style = "font-size:30px">Select your Branch</h1>
          <%= form.select :branch_name, @all_locations_name %>
        <br>

        <%= form.submit "Get Queue Number", class: "button is-large is-responsive is-rounded",  style: "font-size:22px; color:white;"%>
      <% end %>
    </div><br>

</center>



